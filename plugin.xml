<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="com.zam.cordova.contactsemails"
    version="0.0.10">

    <name>Contacts Emails</name>
    <description>Cordova Plugin to List Contacts with emails </description>
    <license>Apache 2.0</license>
    <keywords>cordova,contacts,list,email</keywords>
    <issue>https://github.com/xam33r/cordova-plugin-contacts-emails/issues</issue>

    <js-module src="www/contactsemails.js" name="contactsEmails">
        <clobbers target="navigator.contactsEmails" />
    </js-module>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="contactsemails">
                <param name="android-package" value="com.zam.cordova.contactsemails.ContactsManager"/>
            </feature>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.READ_CONTACTS" />
        </config-file>

        <source-file src="src/android/ContactsManager.java" target-dir="src/com/zam/cordova/contactsemails" />
    </platform>

    <!-- ios -->
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="contactsEmails">
                <param name="ios-package" value="CDVContactsPhoneNumbers"/>
            </feature>
        </config-file>

        <header-file src="src/ios/CDVContactsPhoneNumbers.h" />
        <source-file src="src/ios/CDVContactsPhoneNumbers.m" />

        <framework src="AddressBook.framework" weak="true" />
        <framework src="AddressBookUI.framework" weak="true" />
        <framework src="CoreGraphics.framework" />
    </platform>
</plugin>
